<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="myButton">
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#ffe9b229</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="buttonAlign" parent="myButton">
        <item name="android:layout_alignStart">@+id/button6</item>
        <item name="android:layout_alignLeft">@+id/button6</item>
        <item name="android:layout_alignEnd">@+id/button6</item>
        <item name="android:layout_alignRight">@+id/button6</item>
        <item name="android:shadowColor">#ffd0d0d0</item>
    </style>

</resources>
